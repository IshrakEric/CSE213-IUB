<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.midterm_2_2211182.shilpakala_academy.MunaiyaTammi.CampaignInitiationController">

    <children>
        <Label layoutX="180.0" layoutY="20.0" style="-fx-font-size: 18; -fx-font-weight: bold;" text="Initiate a Nationwide Campaign" textFill="#47bc27" />

        <Label layoutX="50.0" layoutY="80.0" text="Campaign Title:" />
        <TextField fx:id="campaignTitleField" layoutX="180.0" layoutY="75.0" prefWidth="350.0" />

        <Label layoutX="50.0" layoutY="130.0" text="Goal/Objective:" />
        <TextField fx:id="campaignGoalField" layoutX="180.0" layoutY="125.0" prefWidth="350.0" />

        <Label layoutX="50.0" layoutY="180.0" text="Description:" />
        <TextArea fx:id="campaignDescriptionArea" layoutX="180.0" layoutY="175.0" prefHeight="88.0" prefWidth="350.0" wrapText="true" />

        <Label layoutX="50.0" layoutY="300.0" text="Target Audience:" />
        <ComboBox fx:id="targetAudienceComboBox" layoutX="180.0" layoutY="295.0" prefWidth="200.0" promptText="Select Audience">
             
        </ComboBox>

        <Label layoutX="50.0" layoutY="350.0" text="Duration (in days):" />
        <TextField fx:id="campaignDurationField" layoutX="180.0" layoutY="345.0" prefWidth="100.0" />

        <Button fx:id="launchButton" layoutX="180.0" layoutY="420.0" onAction="#onlaunchButtonClick" text="Launch Campaign" />
    </children>
</AnchorPane>
