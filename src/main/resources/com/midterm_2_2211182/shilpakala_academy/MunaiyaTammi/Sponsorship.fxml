<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.midterm_2_2211182.shilpakala_academy.MunaiyaTammi.SponsorshipController">

<children>
    <Label layoutX="160.0" layoutY="20.0" style="-fx-font-size: 18; -fx-font-weight: bold;" text="Sponsor Specific Events or Artists" />

    <RadioButton fx:id="eventSponsorRadioButton" layoutX="50.0" layoutY="70.0" text="Sponsor an Event" />
    <RadioButton fx:id="artistSponsorRadioButton" layoutX="200.0" layoutY="70.0" text="Sponsor an Artist" />

    <Label layoutX="50.0" layoutY="120.0" text="Select an option:" />
    <ComboBox fx:id="sponsorshipOptionsBox" layoutX="180.0" layoutY="115.0" prefWidth="300.0" promptText="Select an event or artist" />

    <Label layoutX="50.0" layoutY="170.0" text="Sponsorship Amount:" />
    <TextField fx:id="sponsorshipAmountField" layoutX="180.0" layoutY="165.0" prefWidth="200.0" promptText="Enter amount" />

    <Label layoutX="50.0" layoutY="220.0" text="Message to Recipient:" />
    <TextArea fx:id="messageTextArea" layoutX="180.0" layoutY="215.0" prefHeight="100.0" prefWidth="300.0" promptText="Write a message (optional)" wrapText="true" />

    <Label layoutX="50.0" layoutY="340.0" text="Select Payment Method:" />
    <RadioButton fx:id="creditCardRadioButton" layoutX="200.0" layoutY="340.0" text="Credit/Debit Card" />
    <RadioButton fx:id="bankTransferRadioButton" layoutX="346.0" layoutY="340.0" text="Bank Transfer" />

    <Button fx:id="submitSponsorshipButton" layoutX="180.0" layoutY="400.0" text="Submit Sponsorship" />
    <Button fx:id="cancelButton" layoutX="320.0" layoutY="400.0" text="Cancel" />
</children>
</AnchorPane>
